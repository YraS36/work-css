{{#with data}}
  <div class='preview'>
    <div class='preview_header'>
      <span class='preview_date'>{{date}}</span>
      {{#each category}}
        <span
          class='preview_category preview_category_{{id}}'
        >{{text}}</span>
      {{/each}}
    </div>
    <strong class='preview_title'>{{title}}</strong>
    <p class='preview_description'>This is a wider card with
      supporting text below as a natural lead-in to
      additional content

    </p>
    <a href='#'>Continue reading</a>
  </div>
{{/with}}